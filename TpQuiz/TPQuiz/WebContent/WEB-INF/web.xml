<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <!-- Home page -->
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>servlets.Home</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <!-- Student Page -->
  <servlet>
    <servlet-name>Student</servlet-name>
    <servlet-class>servlets.StudentPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Student</servlet-name>
    <url-pattern>/student</url-pattern>
  </servlet-mapping>
  <!-- Teacher Page -->
  <servlet>
    <servlet-name>Teacher</servlet-name>
    <servlet-class>servlets.TeacherPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Teacher</servlet-name>
    <url-pattern>/teacher</url-pattern>
  </servlet-mapping>
  <!-- Admin Page -->
  <servlet>
    <servlet-name>Admin</servlet-name>
    <servlet-class>servlets.AdminPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <!-- Test running -->
  <servlet>
    <servlet-name>TestInProgress</servlet-name>
    <servlet-class>servlets.TestInProgress</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestInProgress</servlet-name>
    <url-pattern>/testInProgress</url-pattern>
  </servlet-mapping>
  <!-- Deconnection Page -->
  <servlet>
    <servlet-name>Deconnection</servlet-name>
    <servlet-class>login.Disconnect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Deconnection</servlet-name>
    <url-pattern>/deconnect</url-pattern>
  </servlet-mapping>
  <!-- Result Page -->
  <servlet>
    <servlet-name>Result</servlet-name>
    <servlet-class>servlets.ResultPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Result</servlet-name>
    <url-pattern>/resultPage</url-pattern>
  </servlet-mapping>
  <!-- Registry Page -->
  <servlet>
    <servlet-name>Registry</servlet-name>
    <servlet-class>servlets.RegistryPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registry</servlet-name>
    <url-pattern>/registry</url-pattern>
  </servlet-mapping>
  <!-- Listing Page -->
  <servlet>
    <servlet-name>Listing</servlet-name>
    <servlet-class>servlets.UserListCtrl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Listing</servlet-name>
    <url-pattern>/listing</url-pattern>
  </servlet-mapping>
  <!-- DeleteUser Route -->
  <servlet>
    <servlet-name>DeletingUser</servlet-name>
    <servlet-class>servlets.DeleteUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeletingUser</servlet-name>
    <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  <!-- ModifyUser Route -->
  <servlet>
    <servlet-name>ModifyUser</servlet-name>
    <servlet-class>servlets.ModifyUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyUser</servlet-name>
    <url-pattern>/modifyUser</url-pattern>
  </servlet-mapping>
  <!-- Miscellaneous folders for css, javacript and pictures -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/css/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/js/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/img/*</url-pattern>
  </servlet-mapping>
</web-app>